<h1>Create new Product</h1>

<%= form_for @product do |form| %>
	<%= form.label :name %>
	<%= form.text_field :name %>
	<br />
	<%= form.label :description %>
	<%= form.text_field :description %>
	<br />
	<%= form.label :photo %>
	<%= form.text_field :photo %>
	<br />
	<%= form.label :price %>
	<%= form.text_field :price %>
	<br />
	<%= form.submit %>
<% end %>