<div class="row">
  <div class="col-lg-12">
    <h2>This is your cart</h2>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Product Name</th>
          <th scope="col">Price</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each_with_index do |item, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= item.product.name %></td>
          <td><%= item.product.price %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
